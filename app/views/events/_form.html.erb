<%= form_for([@project, @event], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :done_on, :class => "control-label" %>
    <div class="controls">
      <%= f.date_field :done_on, :class => 'input-block-level' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => "control-label"%>
    <div class="controls">
      <%= f.text_area :description, :class => 'input-block-level' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :amount, :class => "control-label"%>
    <div class="controls">
      <%= f.text_field :amount, :as => :float, :class => 'input-block-level' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :user, :class => "control-label"%>
    <div class="controls">
      <%= f.collection_select :user_id, @users, :id, :name, { :selected => current_user.id }, :class => 'input-block-level'  %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit  class: 'btn btn-primary' %>
  </div>
<% end %>
