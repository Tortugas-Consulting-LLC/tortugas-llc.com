<h1><%= set_then_return_title "Contact Us" %></h1>
<%= form_tag(contact_index_path, :class => "form-horizontal") do %>
  <div class="control-group">
    <%= label_tag(:name, "Contact Name", :class => "control-label") %>
    <div class="controls">
      <%= text_field_tag(:name) %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:email, "Email", :class => "control-label") %>
    <div class="controls">
      <%= email_field_tag(:email) %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:subject, "Subject", :class => "control-label") %>
    <div class="controls">
      <%= text_field_tag(:subject) %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:message, "Message", :class => "control-label") %>
    <div class="controls">
      <%= text_area_tag(:message) %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag("Submit", :class => "btn btn-primary") %>
  </div>
<% end %>
